<div class="product-card">
  <img
    src="/images/products/<%= product.category.name %>/<%= product.imgName %>"
    alt="Product Image"
    onclick="moveToDetailProduct('<%= product._id%> ')"
  />
  <div class="details" onclick="moveToDetailProduct('<%= product._id%> ')">
    <h2><%= product.name %></h2>
    <p class="price"><%= product.price.toLocaleString('vi-VN')+"Ä‘" %></p>
  </div>
  <button onclick="addToCart('<%= product._id%>',1)">Add to cart</button>
</div>
